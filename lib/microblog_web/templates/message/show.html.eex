<h2>Show Message</h2>

<ul>

  <li>
    <strong>Username:</strong>
    <%= Microblog.Accounts.get_user_by_id!(@message.user_id).username %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= @message.body %>
  </li>

</ul>

<span><%= link "Edit", to: message_path(@conn, :edit, @message) %></span>
<span><%= link "Back", to: message_path(@conn, :index) %></span>
